<Window x:Class="PresentationLayer.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer"
        mc:Ignorable="d"
        Title="Prijava" Height="350" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#FF333333">

    <Grid>
        <Border Background="#FF444444" CornerRadius="10" Padding="20" Margin="20">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Prijava" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" TextAlignment="Center"/>

                <TextBlock Text="Email:" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" Height="30" FontSize="14" Foreground="White" Background="#FF666666" BorderThickness="0" Padding="5" Width="250"/>

                <TextBlock Text="Lozinka:" Foreground="White" FontSize="14" Margin="10,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" Height="30" FontSize="14" Foreground="White" Background="#FF666666" BorderThickness="0" Padding="5" Width="250"/>

                <Button Content="Prijavi se" Width="180" Height="40" Margin="0,20,0,0" x:Name="LoginButton"
                        Background="#f65b43" Foreground="White" FontSize="16" FontWeight="Bold"
                        BorderThickness="0" Cursor="Hand" Click="LoginButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
