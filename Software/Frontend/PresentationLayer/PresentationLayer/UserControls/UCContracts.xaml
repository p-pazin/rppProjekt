<UserControl x:Class="PresentationLayer.UserControls.UCContracts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#FF444444" Padding="10">
            <TextBlock Text="Ugovori" Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <DataGrid x:Name="dgvContracts" Grid.Row="1" Margin="10" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Skini PDF" x:Name="btnPrintContract" Padding="10" Margin="5" Click="Button_Click" Foreground="White" Background="#FF444444" BorderBrush="#FF555555">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Dodaj ugovor" x:Name="btnAddContract" Padding="10" Margin="5" Click="Button_Click" Foreground="White" Background="#FF444444" BorderBrush="#FF555555">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Uredi ugovor" x:Name="btnEditContract" Padding="10" Margin="5" Foreground="White" Background="#FF444444" BorderBrush="#FF555555">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Obriši ugovor" x:Name="btnDeleteContract" Padding="10" Margin="5" Foreground="White" Background="#FF444444" BorderBrush="#FF555555">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
