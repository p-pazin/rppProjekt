<UserControl x:Class="PresentationLayer.UserControls.UCDocumentPreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="PdfImageContainer" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Image x:Name="PdfImageControl" Width="600" Height="800" />
        </StackPanel>
    </ScrollViewer>

</UserControl>
