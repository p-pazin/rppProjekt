<UserControl x:Class="PresentationLayer.UserControls.UCContactForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid Margin="20" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Dodavanje kontakta" x:Name="txtTitle" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="White"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,10,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Ime:" Grid.Row="0" Grid.Column="0" Foreground="White" Margin="0,0,10,5"/>
                <TextBox x:Name="txtFirstName" Grid.Row="0" Grid.Column="1" Height="30" 
                         FontSize="14" Foreground="White" Background="#FF444444" BorderBrush="#FF555555" Margin="0,0,0,10"/>

                <TextBlock Text="Prezime:" Grid.Row="1" Grid.Column="0" Foreground="White" Margin="0,0,10,5"/>
                <TextBox x:Name="txtLastName" Grid.Row="1" Grid.Column="1" Height="30" 
                         FontSize="14" Foreground="White" Background="#FF444444" BorderBrush="#FF555555" Margin="0,0,0,10"/>

                <TextBlock Text="OIB:" Grid.Row="2" Grid.Column="0" Foreground="White" Margin="0,0,10,5"/>
                <TextBox x:Name="txtOIB" Grid.Row="2" Grid.Column="1" Height="30" 
                         FontSize="14" Foreground="White" Background="#FF444444" BorderBrush="#FF555555" Margin="0,0,0,10"/>

                <TextBlock Text="Država:" Grid.Row="3" Grid.Column="0" Foreground="White" Margin="0,0,10,5"/>
                <ComboBox x:Name="cmbCountry" Grid.Row="3" Grid.Column="1" Height="30" 
                          VerticalContentAlignment="Top" FontSize="14" Foreground="Black" Background="#FF444444" BorderBrush="#FF555555" Margin="0,0,0,10">
                </ComboBox>

                <TextBlock Text="Grad:" Grid.Row="4" Grid.Column="0" Foreground="White" Margin="0,0,10,5"/>
                <ComboBox x:Name="cmbCity" Grid.Row="4" Grid.Column="1" Height="30" 
                          VerticalContentAlignment="Top" FontSize="14" Foreground="Black" Background="#FF444444" BorderBrush="#FF555555" Margin="0,0,0,10">
                </ComboBox>

                <TextBlock Text="Adresa:" Grid.Row="5" Grid.Column="0" Foreground="White" Margin="0,0,10,5"/>
                <TextBox x:Name="txtAddress" Grid.Row="5" Grid.Column="1" Height="30" 
                         FontSize="14" Foreground="White" Background="#FF444444" BorderBrush="#FF555555" Margin="0,0,0,10"/>

                <TextBlock Text="Broj telefona:" Grid.Row="0" Grid.Column="3" Foreground="White" Margin="0,0,10,5"/>
                <TextBox x:Name="txtPhoneNumber" Grid.Row="0" Grid.Column="4" Height="30" 
                         FontSize="14" Foreground="White" Background="#FF444444" BorderBrush="#FF555555" Margin="0,0,0,10"/>

                <TextBlock Text="Broj mobitela:" Grid.Row="1" Grid.Column="3" Foreground="White" Margin="0,0,10,5"/>
                <TextBox x:Name="txtMobileNumber" Grid.Row="1" Grid.Column="4" Height="30" 
                         FontSize="14" Foreground="White" Background="#FF444444" BorderBrush="#FF555555" Margin="0,0,0,10"/>

                <TextBlock Text="E-mail:" Grid.Row="2" Grid.Column="3" Foreground="White" Margin="0,0,10,5"/>
                <TextBox x:Name="txtEmail" Grid.Row="2" Grid.Column="4" Height="30" 
                         FontSize="14" Foreground="White" Background="#FF444444" BorderBrush="#FF555555" Margin="0,0,0,10"/>

                <TextBlock Text="Opis:" Grid.Row="3" Grid.Column="3" Foreground="White" Margin="0,0,10,5"/>
                <TextBox x:Name="txtDescription" Grid.Row="3" Grid.Column="4" Height="60" 
                         TextWrapping="Wrap" AcceptsReturn="True" FontSize="14" Foreground="White" Background="#FF444444" BorderBrush="#FF555555" Margin="0,0,0,10"/>

                <TextBlock Text="Status:" Grid.Row="4" Grid.Column="3" Foreground="White" Margin="0,0,10,5"/>
                <ComboBox x:Name="cmbStatus" Grid.Row="4" Grid.Column="4" Height="30" 
                          VerticalContentAlignment="Top" FontSize="14" Foreground="Black" Background="#FF444444" BorderBrush="#FF555555" Margin="0,0,0,10">
                </ComboBox>
            </Grid>
        </ScrollViewer>

        <Button Grid.Row="2" Grid.ColumnSpan="5" Content="Spremi" x:Name="btnSave" Click="btnSave_Click" HorizontalAlignment="Center" 
                VerticalAlignment="Top" Margin="0,0,0,0" Padding="20,10" FontSize="16" Foreground="White" 
                Background="#FF444444" BorderBrush="#FF555555"/>
    </Grid>
</UserControl>
