<UserControl x:Class="PresentationLayer.UserControls.UCEditContractSale"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <UserControl.Resources>
    </UserControl.Resources>

    <Grid Margin="20" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Ažuriranje ugovora" x:Name="txtTitle" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="White"/>
            <TextBlock x:Name="updateContractWarning" Text="Greška prilikom ažuriranja ugovora!" Margin="0,0,0,10" Foreground="Red" FontWeight="Bold"  FontSize="12" HorizontalAlignment="Center"/>
            <TextBlock x:Name="infoWarning" Text="Popunite sve podatke o ugovoru!" Margin="0,-25,0,10" Foreground="Red" FontWeight="Bold"  FontSize="12" HorizontalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="contractFormsPanel">
                <Grid x:Name="grdContractSaleForm" Margin="10,10,10,10" Visibility="Visible" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Ponuda:" Grid.Row="0" Grid.Column="0" Margin="0,10,0,25" Foreground="White" FontSize="14"/>
                    <ComboBox x:Name="cmbOffer" Grid.Row="0" Grid.Column="1" Height="30" FontSize="14" Foreground="White" Background="#FF444444" BorderBrush="#FF555555" Margin="10,0,0,20">
                        <ComboBox.DisplayMemberPath>DisplayText</ComboBox.DisplayMemberPath>
                        <ComboBox.SelectedValuePath>Offer</ComboBox.SelectedValuePath>
                    </ComboBox>

                    <TextBlock Text="Vozilo:" Grid.Row="1" Grid.Column="0" Margin="0,10,0,25" Foreground="White" FontSize="14"/>
                    <ComboBox x:Name="cmbVehicle" Grid.Row="1" Grid.Column="1" Height="30" FontSize="14" Foreground="White" Background="#FF444444" BorderBrush="#FF555555" Margin="10,0,0,20">
                        <ComboBox.DisplayMemberPath>DisplayText</ComboBox.DisplayMemberPath>
                        <ComboBox.SelectedValuePath>Vehicle</ComboBox.SelectedValuePath>
                    </ComboBox>

                    <TextBlock Text="Kontakt:" Grid.Row="2" Grid.Column="0" Margin="0,10,0,25" Foreground="White" FontSize="14"/>
                    <ComboBox x:Name="cmbContact" Grid.Row="2" Grid.Column="1" Height="30" FontSize="14" Foreground="White" Background="#FF444444" BorderBrush="#FF555555" Margin="10,0,0,20">
                        <ComboBox.DisplayMemberPath>DisplayText</ComboBox.DisplayMemberPath>
                        <ComboBox.SelectedValuePath>Contact</ComboBox.SelectedValuePath>
                    </ComboBox>

                    <TextBlock Text="Naziv:" Grid.Row="3" Grid.Column="0" Margin="0,10,0,25" Foreground="White" FontSize="14"/>
                    <TextBox x:Name="txtTitleSale" Grid.Row="3" Grid.Column="1" Margin="10,0,0,20" Height="30" FontSize="14" Foreground="White" Background="#FF444444" BorderBrush="#F65B43">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBlock Text="Opis:" Grid.Row="4" Grid.Column="0" Margin="0,10,0,25" Foreground="White" FontSize="14"/>
                    <TextBox x:Name="txtContentSale" Grid.Row="4" Grid.Column="1" Margin="10,0,0,20" Height="60" FontSize="14" Foreground="White" Background="#FF444444" BorderBrush="#F65B43">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBlock Text="Mjesto:" Grid.Row="5" Grid.Column="0" Margin="0,10,0,25" Foreground="White" FontSize="14"/>
                    <TextBox x:Name="txtLocationSale" Grid.Row="5" Grid.Column="1" Margin="10,0,0,20" Height="30" FontSize="14" Foreground="White" Background="#FF444444" BorderBrush="#F65B43">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBlock Text="Potpis:" Grid.Row="6" Grid.Column="0" Margin="0,10,0,25" Foreground="White" FontSize="14"/>
                    <ComboBox x:Name="cmbSigned" Grid.Row="6" Grid.Column="1" Height="30" FontSize="14" Foreground="White" Background="#FF444444" BorderBrush="#FF555555" Margin="10,0,0,20">
                    </ComboBox>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnSave" Click="btnSave_Click" Content="Spremi" Padding="20,10" FontSize="16" Foreground="White" Background="#FF444444" BorderBrush="#FF555555" Margin="10,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="btnExit" Click="btnExit_Click" Content="Odustani" Padding="20,10" FontSize="16" Foreground="White" Background="#FF444444" BorderBrush="#FF555555" Margin="10,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>