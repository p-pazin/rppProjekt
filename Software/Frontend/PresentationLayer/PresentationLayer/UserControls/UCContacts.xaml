<UserControl x:Class="PresentationLayer.UserControls.UCContacts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#FF444444" Padding="10">
            <TextBlock Text="Kontakti" Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <DataGrid x:Name="dgvContacts" Grid.Row="1" Margin="10" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Ime" Binding="{Binding FirstName}" Width="Auto"/>
                <DataGridTextColumn Header="Prezime" Binding="{Binding LastName}" Width="Auto"/>
                <DataGridTextColumn Header="OIB" Binding="{Binding Pin}" Width="Auto"/>
                <DataGridTextColumn Header="Datum stvaranja" Binding="{Binding DateOfCreation, StringFormat=\{0:yyyy-MM-dd\}}" Width="Auto"/>
                <DataGridTemplateColumn Header="Status" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Neaktivan" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding State}" Value="1">
                                                <Setter Property="Text" Value="Aktivan" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Država" Binding="{Binding Country}" Width="Auto"/>
                <DataGridTextColumn Header="Grad" Binding="{Binding City}" Width="Auto"/>
                <DataGridTextColumn Header="Adresa" Binding="{Binding Address}" Width="Auto"/>
                <DataGridTextColumn Header="Broj telefona" Binding="{Binding TelephoneNumber}" Width="Auto"/>
                <DataGridTextColumn Header="Broj mobitela" Binding="{Binding MobileNumber}" Width="Auto"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="Auto"/>
                <DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Dodaj kontakt" x:Name="btnAddContact" Click="btnAddContact_Click" Padding="10" Margin="5"  Foreground="White" Background="#FF444444" BorderBrush="#FF555555">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Uredi kontakt" x:Name="btnEditContact" Click="btnEditContact_Click" Padding="10" Margin="5" Foreground="White" Background="#FF444444" BorderBrush="#FF555555">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Obriši kontakt" x:Name="btnDeleteContact" Click="btnDeleteContact_Click" Padding="10" Margin="5" Foreground="White" Background="#FF444444" BorderBrush="#FF555555">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
