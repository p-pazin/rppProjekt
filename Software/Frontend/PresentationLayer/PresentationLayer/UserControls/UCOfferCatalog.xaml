<UserControl x:Class="PresentationLayer.UserControls.UCOfferCatalog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d"  Background="Transparent"
             d:DesignHeight="450" d:DesignWidth="800"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#FF444444" Padding="10">
            <TextBlock Text="Katalog ponuda" Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <DataGrid x:Name="dgvOffers" Grid.Row="1" Margin="10" AutoGenerateColumns="False" IsReadOnly="True">
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="btnAddOffer" Content="Dodaj ponudu" Padding="10" Click="btnAddOffer_Click" Margin="5" Foreground="White" Background="#FF444444" BorderBrush="#FF555555">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="btnEditOffer" Click="btnEditOffer_Click" Content="Uredi ponudu" Padding="10" Margin="5" Foreground="White" Background="#FF444444" BorderBrush="#FF555555">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="btnDeleteOffer" Content="Obriši ponudu" Padding="10" Margin="5" Foreground="White" Background="#FF444444" BorderBrush="#FF555555">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
